@using DntSite.Web.Features.UserProfiles.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    فایل ذیل در سایت آپلود گردیده است. مراتبط جهت اطلاع:
    <br/>
    <div align="center" dir="rtl" style="font-family: Tahoma; ">
        <div align="center" dir="ltr">
            <a dir="ltr" href="@Model.ActionUrl">
                @Model.ActionUrl (@Model.FormattedFileSize)
            </a>
            @if (Model.ActionUrl.IsValidImageFileUrl())
            {
                <br/>
                <br/>
                <img src="@Model.ActionUrl" alt="@Model.ActionUrl"/>
            }
            <br/><br/>
            <span dir="@Model.FriendlyName.GetDir()">توسط: @Model.FriendlyName</span>
            <br/>
        </div>
    </div>
</LayoutView>

@code {

    [Parameter] public FileUploadEmailModel Model { set; get; } = null!;

}
